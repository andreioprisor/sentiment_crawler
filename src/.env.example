#######################
# URL Configuration
#######################
# Base URL for the crawler to start from
BASE_URL=https://www.investing.com/news/cryptocurrency-news

# Number of pages to crawl (integer)
PAGES_COUNT=3

#######################
# Proxy Settings 
#######################
# Bright Data (formerly Luminati) proxy configuration
BRIGHT_DATA_USERNAME=your-bright-data-username
BRIGHT_DATA_PASSWORD=your-bright-data-password
BRIGHT_DATA_HOST=your-bright-data-host
BRIGHT_DATA_PORT=your-bright-data-port

#######################
# Storage & Output
#######################
# Path where crawled data will be saved
OUTPUT_PATH=

# Directory for storing error logs
ERROR_LOG_PATH=

# 2captcha API key (only needed if USE_CAPTCHA is true)
CAPTCHA_API_KEY=your-2captcha-api-key
